<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/prnslogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:src="@drawable/sanjoseprns" />


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/prnslogo" />


        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@id/pager"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="10dip"
            app:centered="true"
            app:fillColor="#3F51B5"
            app:pageColor="#cfc3c3"
            app:snap="false" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_home_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/indicator"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:padding="1dp"
            android:text="@string/introduction"
            android:textAlignment="textStart"
            android:textColor="#021852"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_home_tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_home_tv"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:padding="1dp"
            android:text="@string/introduction_1"
            android:textAlignment="textStart"
            android:textColor="#021852"
            android:textSize="@dimen/twenty_five_dp"
            android:textStyle="bold"

            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_home_tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_home_tv_1"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:padding="1dp"
            android:text="@string/introduction_2"
            android:textAlignment="textStart"
            android:textColor="#021852"
            android:textSize="18dp"
            android:textStyle="italic"

            />




    </RelativeLayout>

</ScrollView>